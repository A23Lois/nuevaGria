{% extends 'base.twig'%} 
{% block title %} {{ parent() }} | Registro {% endblock %} 
{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div class="row">
        <div class="row">
    <div class="col-10 offset-1 ficha">
        <div class="col-lg-6">
            <h2 class=" my-2">Registro</h2>
            {{ form_errors(registrationForm) }}
            {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.usuario)}}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Contrase√±a'
                }) }}
                {{ form_row(registrationForm.agreeTerms,{
                    label: 'Aceptar los terminos',
                    label_attr: { class: 'me-2' }
                }) }}

                <button type="submit" class="btn btn-primario">Registrarse</button>
            {{ form_end(registrationForm) }}
        </div>
        </div>
    </div>

{% endblock %}
