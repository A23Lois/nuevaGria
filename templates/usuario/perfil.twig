{% extends 'base.twig' %} 
{% block title %} {{ parent() }} | Mi Perfil
{% endblock %}
{% block body %}

<h4>Últimas medias añadidas</h4>
<div class="offset-1 col-10">
    <div class="row">
    {% for media in medias %}

        <div class="col-2">
            <a href="{{ path('verMedia', { id: media.id })}}" class="text-decoration-none text-reset">
                <div class="row obj obj-{{media.idTipoMedia}}">
                    <div class="col-12"><img class="img-ficha" src = {{media.urlImagen}}></img></div>
                    <div class="col-12"><h5>{{ media.titulo }}</h5></div>
                </div>
            </a>  
        </div>

    {% endfor %}
    </div>
</div>
{% endblock %}